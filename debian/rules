#!/usr/bin/make -f

build: build-stamp
build-stamp:
	dh_testdir
	#$(MAKE)
	mkdir -p build
	cd build
	##qmake PREFIX=/usr FLAVOR=qtcontrols
	qmake PREFIX=/usr FLAVOR=kirigami
	make
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	-rm -f build configure-stamp build-stamp 
	dh_clean

install: build
	dh_testdir
	dh_testroot
	#$(MAKE) install
	make INSTALL_ROOT="$pkgdir" install

	install -Dm644 amazfish.desktop -t /etc/xdg/autostart/
	install -Dm755 /amazfish-launcher.sh /usr/libexec/amazfish-launcher

	# We don't ship systemd
	#rm -r "$pkgdir"/usr/lib/systemd

binary-indep: build install
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_link -a
	dh_strip -a
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install 
